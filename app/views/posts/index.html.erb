<p id="notice"><%= notice %></p>

<h2>Search Post</h2>
<form class="" action="<%= posts_path %>" method="get">
  <input name="q">
</form>

<h1>Posts</h1>

<table id="posts">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @posts %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

<h1>New Post</h1>

<%= render 'form', post: @post %>

<script type="text/javascript">

  $('[name=q]').keyup(function (){
    $.ajax({
      url: <%= posts_path %>,
      type: 'GET',
      dataType: 'script',
      data: {q: $(this).val()}
    })
  })

</script>
